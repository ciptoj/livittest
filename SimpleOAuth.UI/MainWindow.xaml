<Window x:Class="SimpleOAuth.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="OAuth Sample" Height="300" Width="300">
    <StackPanel>
        <ComboBox SelectedItem="{Binding SelectedProvider,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Margin="10"  ItemsSource="{Binding OAuthProviders, Mode=OneWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding ProviderSelectedCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ComboBox>
    </StackPanel>
</Window>
